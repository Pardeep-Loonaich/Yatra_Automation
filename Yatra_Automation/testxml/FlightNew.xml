<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name=" Yatra Flight Sample Automation Test" verbose="3"	parallel="tests" thread-count="500">
	<parameter name="workBookName" value="testdata\\Flights.xls" />
	<parameter name="sheetName" value="FlightSearch" />
	
	<!-- parameter for device host and port -->
	<parameter name="deviceHost" value="localhost" />
	<parameter name="devicePort" value="4444" />
	<test name="Flight Search on chrome" thread-count="1" parallel="true">
	<parameter name="browserName" value="chrome_windows" />
		
		<!-- we are controlling email on every failure from this flag -->
	<parameter name="SEND_EMAIL_ON_FAILIURE" value="false"></parameter>
		<parameter name="webSite" value="https://www.yatra.com/" />
		<classes>
			<class name="com.Yatra.TestScript.SanityE2E.FlightE2E">
			<methods>					
					<include name="TC_Yatra_E2E_001"></include>	
			</methods>	
			</class>
		</classes>
	</test>
</suite>
